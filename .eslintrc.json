{
    "env": {
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "no-console": "error",
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "max-len": [
          "error",
          100
        ],
        "no-undefined": "error",
        "comma-dangle": "error",
        "no-trailing-spaces": "error",
        "no-tabs": "error",
        "comma-spacing": [
            "error",
            {
                "after": true,
                "before": false
            }
        ],
        "object-curly-spacing": [
            "error",
            "always"
        ],
        "require-jsdoc": "error",
        "valid-jsdoc": "error"
    }
}
